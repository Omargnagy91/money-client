{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules/*",
    "static/*",
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2020",
      "WebWorker"
    ],
    "baseUrl": ".",
    "paths": {
      "$app/*": [
        ".svelte/dev/runtime/app/*",
        ".svelte/build/runtime/app/*"
      ],
      "$service-worker": [
        ".svelte/build/runtime/service-worker"
      ],
      "$strict": [
        "src/components/strict"
      ],
      "$validators": [
        "src/components/strict/validators"
      ],
      "$strict/*": [
        "src/components/strict/*"
      ],
      "$components/*": [
        "src/components/*"
      ],
      "$core/*": [
        "src/core/*"
      ],
      "$services/*": [
        "src/services/*"
      ],
      "$stores/*": [
        "src/stores/*"
      ],
      "$utils/*": [
        "src/utils/*"
      ],
    },
    "moduleResolution": "node",
    "target": "es2018",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
  },
}