{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules/*",
    "static/*",
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2020",
      "WebWorker"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "$app/*": [
        ".svelte/dev/runtime/app/*",
        ".svelte/build/runtime/app/*"
      ],
      "$lib/*": [
        "src/lib/*"
      ],
      "$core/*": [
        "src/core/*"
      ],
    },
    // Overriding the Svelte config, because it is easier to migrate now
    "importsNotUsedAsValues": "preserve",
    "target": "ES2020",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
  },
}